{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "src",
    "jsx": "react",
    "useUnknownInCatchVariables": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules"]
}
